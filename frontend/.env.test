# Test Environment Configuration
# This file is loaded automatically during testing

# Frontend Server Configuration
VITE_PORT=3002
VITE_HOST=localhost

# API Configuration - Backend server
VITE_API_URL=http://localhost:3001/api

# Environment
NODE_ENV=test
VITE_NODE_ENV=test

# Playwright and Testing
PLAYWRIGHT_TEST=true
ENABLE_RATE_LIMITING=false

# Development Tools - Disabled in tests
VITE_ENABLE_QUERY_DEVTOOLS=false

# Security
VITE_ENABLE_HTTPS=false

# Testing
VITE_TEST_TIMEOUT=30000
VITE_MOCK_API=false

# Logging
VITE_LOG_LEVEL=error

# Performance Monitoring - Disabled in tests
VITE_ENABLE_PERFORMANCE_MONITORING=false