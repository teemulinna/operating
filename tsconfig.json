{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/controllers/*": [
        "./controllers/*"
      ],
      "@/services/*": [
        "./services/*"
      ],
      "@/middleware/*": [
        "./middleware/*"
      ],
      "@/routes/*": [
        "./routes/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "src/types/express.d.ts",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "frontend",
    "src/components",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/test-*.ts",
    "src/services/forecasting/**/*",
    "src/routes/forecasting.routes.ts",
    "src/services/ml-recommendation-engine.service.ts",
    "src/services/optimization-engine.service.ts",
    "src/scripts/run-integration-validation.ts"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}