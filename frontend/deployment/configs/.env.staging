# Staging Environment Configuration

# Application
NODE_ENV=staging
PORT=5000

# Database
DATABASE_URL=postgresql://app_user:staging_password@database:5432/employee_management
DB_HOST=database
DB_PORT=5432
DB_NAME=employee_management
DB_USER=app_user
DB_PASSWORD=staging_password

# Redis
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# JWT
JWT_SECRET=staging-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://staging.yourdomain.com

# Email (using test email service)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=staging_user
SMTP_PASSWORD=staging_password
FROM_EMAIL=staging@yourdomain.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Security (less restrictive for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
BCRYPT_ROUNDS=10

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Test Data
SEED_DATA=true
RESET_DB_ON_START=false