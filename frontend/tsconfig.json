{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/services/*": ["./src/services/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/middleware",
    "src/database",
    "src/models", 
    "src/routes",
    "src/services",
    "src/controllers",
    "src/utils/database.ts",
    "src/utils/logger.ts",
    "src/utils/swagger.ts",
    "src/app.ts",
    "src/server.ts",
    "src/tests",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/components/__tests__",
    "src/components/allocation/__tests__",
    "src/hooks/__tests__",
    "src/components/**/*.bak",
    "src/components/allocations.bak/**",
    "src/components/dashboard.bak/**",
    "src/components/employees.bak/**",
    "src/components/allocations/**",
    "src/components/employees/EmployeeFormModal.tsx",
    "src/components/employees/EmployeeListWithForms.tsx", 
    "src/components/employees/Enhanced*.tsx",
    "src/components/employees/Real*.tsx",
    "src/components/projects/**",
    "src/components/pages/**",
    "src/components/reports/**",
    "src/components/resource-planning/**",
    "src/components/schedule/AllocationCellDialog.tsx",
    "src/services/api-real.ts",
    "src/components/schedule/EnhancedWeeklyScheduleGrid.tsx",
    "src/components/schedule/ScheduleView.tsx",
    "src/pages.bak/**",
    "src/hooks/useRealAllocationData.ts",
    "src/services/capacityService.ts",
    "src/test-setup.ts",
    "src/test-utils.tsx",
    "node_modules",
    "dist"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}